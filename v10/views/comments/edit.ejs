<h1>Edit ejs for comments</h1>

<% include ../partials/header %>
<div style="padding-top: 8em">
  <div class="container">
      <div class="row">
        <h1 style="text-align: center">  Edit comment</h1>
        <div style="padding-top: 10em ; width: 30%;"> 
          <form action="/campgrounds/<%= campground_id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
            <div class="form-group">
              <input class="form control" type="text" name="comment[text]" value="<%=  comment.text %> ">
            </div>
            <div class="form-group">
              <button class="btn btn-md btn-primary btn-block">Submit</button>
            </div>
          </form>
          <a href="/campgrounds">Go Back</a>
        </div>
      </div>
    </div> 
  </div>