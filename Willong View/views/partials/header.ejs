<!DOCTYPE html>
<html>
    <head>
        <title>
            yelpcamp
        </title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
      </head>
    <body>

            <nav id="mainNavbar" class="navbar navbar-dark bg-dark navbar-expand-md py-0 fixed-top">
                    <a href="/" class="navbar-brand">Willong</a>
                   <!-- <button class="navbar-toggler" data-toggle="collapse" data-target="#navLinks" aria-label="Toggle navigation"></button> -->
                   <span class="navbar-toggler-icon"></span>
                  <div class="collapse navbar-collapse" id="navLinks">
                    <ul class="nav navbar-nav">
                      <% if(!currentUser) { %>
                      <li class="nav-items">
                        <a id="log" href="/login" >Login</a>
                      </li>
                      <li class="nav-items">
                         <a href="/register" >Sign up</a>
                       </li>
                       <% } else { %>
                        <li><a href="#">Signed In as <%= currentUser.username %></a></li>
                       <li class="nav-items">
                           <a href="/logout">Logout</a>
                         </li>
                       <% } %>
                    </ul>
                  </div>
                 </nav>

                 <div class="container">
                   <% if(error && error.length >0) { %>
                  <div class="alert alert-danger" role="alert">
                    <%= error %>
                 </div>
                 <% } %>
                 <% if(success && success.length >0) { %>
                 <div class="alert alert-success" role="alert">
                    <%= success %>
                 </div>
                 <% } %>
                </div>
                